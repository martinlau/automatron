# -*- mode: ruby -*-
# vi: set ft=ruby :

VAGRANTFILE_API_VERSION = '2'

Vagrant.require_version '>= 1.4.3'

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

    config.vm.define 'fedora-20-x86_64-puppet' do |machine|
        machine.vm.box = 'fedora-20-x86_64'
    end

    config.vm.synced_folder '../config', '/config'

    config.vm.provider :virtualbox do |vb, override|
        vb.gui              = false
        vb.name             = "#{config.vm.box}-puppet"
        override.vm.box_url = '../../../boxes/virtualbox/fedora-20-x86_64.box'
    end

    config.vm.provider :vmware_fusion do |vf, override|
        vf.gui              = false
        vf.name             = "#{config.vm.box}-puppet"
        override.vm.box_url = '../../../boxes/vmware/fedora-20-x86_64.box'
    end

    config.vm.provision :shell do |shell|
        shell.inline = '`gem list r10k -i` || gem install r10k; cd /config; /usr/local/bin/r10k puppetfile install'
    end

    config.vm.provision :puppet do |puppet|
        puppet.manifests_path = '../config/manifests'
        puppet.module_path    = '../config/site', '../config/modules'
        puppet.manifest_file  = 'site.pp'
    end

end
